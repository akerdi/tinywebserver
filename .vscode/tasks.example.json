{
  "version": "2.0.0",
  "options": {
      "cwd": "${workspaceFolder}"
  },

  "tasks": [
      {
          "label": "cmake",
          "type": "shell",
          "command": "cmake",
          "args": [
              "-S",
              ".",
              "-B",
              "cmake-build-debug",
              "-DCMAKE_BUILD_TYPE=Debug"
          ]
      },
      {
          "label": "make",
          "dependsOn": ["cmake"],
          "command": "cmake",
          "args":[
            "--build",
            "cmake-build-debug"
          ]
      },
      {
          "label":"CMake Build",
          "dependsOn":[
            "cmake",
            "make"
          ]
      }
  ]
}